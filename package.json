{
  "name": "agendamx",
  "version": "0.1.0",
  "description": "Plataforma de agendamiento de citas para negocios mexicanos con WhatsApp nativo",
  "private": true,
  "workspaces": [
    "backend",
    "web-admin",
    "web-public",
    "mobile"
  ],
  "scripts": {
